<?xml version="1.0" encoding="UTF-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx"
	width="100%" height="100%">
	<s:layout>
		<s:VerticalLayout paddingLeft="10" paddingRight="10"
			paddingTop="10" paddingBottom="10" />
	</s:layout>
	<s:VGroup width="100%" height="100%">
		<s:HGroup width="100%" height="100%">
			<s:BorderContainer height="100%">
				<s:Scroller height="100%" width="100%">
					<s:VGroup id="cards" height="100%" width="200"
						horizontalAlign="center">
						<s:Rect width="40" height="70">
							<s:fill>
								<s:SolidColor color="#00ff00" />
							</s:fill>
						</s:Rect>
						<s:Rect width="40" height="70">
							<s:fill>
								<s:SolidColor color="#00ff00" />
							</s:fill>
						</s:Rect>
						<s:Rect width="40" height="70">
							<s:fill>
								<s:SolidColor color="#00ff00" />
							</s:fill>
						</s:Rect>
						<s:Rect width="40" height="70">
							<s:fill>
								<s:SolidColor color="#00ff00" />
							</s:fill>
						</s:Rect>
						<s:Rect width="40" height="70">
							<s:fill>
								<s:SolidColor color="#00ff00" />
							</s:fill>
						</s:Rect>
					</s:VGroup>
				</s:Scroller>
			</s:BorderContainer>
			<s:Rect width="100%" height="100%">
				<s:fill>
					<s:SolidColor color="#dddddd" />
				</s:fill>
			</s:Rect>
		</s:HGroup>
		<s:HGroup width="100%">
			<s:VGroup width="100%" height="100%">
				<s:TextArea width="100%" />
				<s:HGroup width="100%">
					<s:TextInput id="chat" width="100%" height="40" fontSize="32"/>
					<mx:Button width="40" height="40" label="Chat" icon="@Embed(source='../resources/speech_icon.png')"/>
				</s:HGroup>
			</s:VGroup>
			<s:VGroup height="100%">
				<s:Button label="Suggest" fontSize="20" width="100%"
					height="100%" />
				<s:Button label="Accuse" fontSize="20" width="100%" height="100%" />
			</s:VGroup>
		</s:HGroup>
	</s:VGroup>
</s:Application>