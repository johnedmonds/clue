<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/mx" creationComplete="init();">
	<fx:Metadata>
		[HostComponent("clue.components.Proposition")]
	</fx:Metadata>
	<s:filters>
		<s:DropShadowFilter />
	</s:filters>
	<fx:Script>
	<![CDATA[
		import spark.components.*;
		import mx.binding.utils.*;
		import spark.events.*;
		[Bindable]public var room:String;
		[Bindable]public var suspect:String;
		[Bindable]public var weapon:String;
		private function init():void{
			roomsList.addEventListener(IndexChangeEvent.CHANGE,function(event:IndexChangeEvent):void{room=roomsList.selectedItems.length>0?roomsList.selectedItems[0] as String:null;});
			suspectsList.addEventListener(IndexChangeEvent.CHANGE,function(event:IndexChangeEvent):void{suspect=suspectsList.selectedItems.length>0?suspectsList.selectedItems[0] as String:null;});
			weaponsList.addEventListener(IndexChangeEvent.CHANGE,function(event:IndexChangeEvent):void{weapon=weaponsList.selectedItems.length>0?weaponsList.selectedItems[0] as String:null;});
		}
	]]>
	</fx:Script>
	<s:Panel title="Proposition" height="100%">
		<s:layout>
			<s:VerticalLayout paddingLeft="30" paddingRight="30"
				paddingTop="30" paddingBottom="30" />
		</s:layout>
		<s:HGroup>
			<s:VGroup height="100%">
				<s:Label text="Choose a room:" />
				<s:List height="100%" id="roomsList" dataProvider="{hostComponent.roomCardNames}"
					itemRenderer="clue.components.renderers.CardRenderer" />
			</s:VGroup>
			<s:VGroup height="100%">
				<s:Label text="Choose a suspect:" />
				<s:List height="100%" id="suspectsList" dataProvider="{hostComponent.suspectCardNames}"
					itemRenderer="clue.components.renderers.CardRenderer" />
			</s:VGroup>
			<s:VGroup height="100%">
				<s:Label text="Choose a weapon:" />
				<s:List height="100%" id="weaponsList" dataProvider="{hostComponent.weaponCardNames}"
					itemRenderer="clue.components.renderers.CardRenderer" />
			</s:VGroup>
		</s:HGroup>
		<s:HGroup>
			<s:Button id="makeProposition" label="OK" />
			<s:Button id="cancelProposition" label="Cancel" />
		</s:HGroup>
	</s:Panel>
</s:Skin>