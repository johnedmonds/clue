<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:clue-components="clue.components.*">
	<fx:Metadata>
		[HostComponent("clue.components.Board")]
	</fx:Metadata>
	<s:Panel title="Board" width="100%" height="100%">
		<s:layout>
			<s:VerticalLayout paddingLeft="10" paddingRight="10"
				paddingTop="10" paddingBottom="10" />
		</s:layout>
		<s:Group>
			<s:layout>
				<s:TileLayout requestedColumnCount="3" />
			</s:layout>
			<clue-components:Room id="kitchen" room="KITCHEN"
				players="{hostComponent.rooms.KITCHEN}" skinClass="clue.components.RoomSkin" />
			<clue-components:Room id="ballroom" room="BALLROOM"
				players="{hostComponent.rooms.BALLROOM}" skinClass="clue.components.RoomSkin" />
			<clue-components:Room id="conservatory" room="CONSERVATORY"
				players="{hostComponent.rooms.CONSERVATORY}" skinClass="clue.components.RoomSkin" />
			<clue-components:Room id="diningRoom" room="DINING_ROOM"
				players="{hostComponent.rooms.DINING_ROOM}" skinClass="clue.components.RoomSkin" />
			<!-- Place-holder -->
			<s:Group />
			<s:VGroup>
				<clue-components:Room id="billiardRoom" room="BILLIARD_ROOM"
					players="{hostComponent.rooms.BILLIARD_ROOM}" skinClass="clue.components.RoomSkin" />
				<clue-components:Room id="library" room="LIBRARY"
					players="{hostComponent.rooms.LIBRARY}" skinClass="clue.components.RoomSkin" />
			</s:VGroup>
			<clue-components:Room id="lounge" room="LOUNGE"
				players="{hostComponent.rooms.LOUNGE}" skinClass="clue.components.RoomSkin" />
			<clue-components:Room id="hall" room="HALL"
				players="{hostComponent.rooms.HALL}" skinClass="clue.components.RoomSkin" />
			<clue-components:Room id="study" room="STUDY"
				players="{hostComponent.rooms.STUDY}" skinClass="clue.components.RoomSkin" />
		</s:Group>
	</s:Panel>
</s:Skin>